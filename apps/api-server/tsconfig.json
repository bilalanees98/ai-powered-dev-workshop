{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "./src",
    "outDir": "./dist",

    "paths": {
      "@app/common": ["../../common/dist/*"],
      "@app/common/*": ["../../common/dist/*"]
    },

    "typeRoots": ["./src/types", "./node_modules/@types", "../../node_modules/@types"],
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "test/**/*.ts"]
}
